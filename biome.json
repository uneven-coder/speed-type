{
  "$schema": "https://biomejs.dev/schemas/2.2.0/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": true,
    "includes": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx", "**/*.json"],
    "excludes": ["node_modules", ".next", "out", "dist", "build", "*.config.js"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "tab",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedImports": "error",
        "noUnusedVariables": "error",
        "useExhaustiveDependencies": "error"
      },
      "style": {
        "noUnusedTemplateLiteral": "error",
        "useConst": "error",
        "useTemplate": "error"
      },
      "complexity": {
        "noExcessiveCognitiveComplexity": "warn",
        "noForEach": "warn"
      },
      "performance": {
        "noAccumulatingSpread": "error"
      },
      "suspicious": {
        "noUnknownAtRules": "off",
        "noArrayIndexKey": "error",
        "noConsoleLog": "warn",
        "noDoubleEquals": "error"
      },
      "nursery": {
        "useSortedClasses": "error"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "semicolons": "always",
      "trailingComma": "all"
    }
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on",
        "fixAll": "on"
      }
    }
  }
}
